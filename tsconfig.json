{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2020", "DOM"],
    "types": ["astro/client", "astro/loaders", "jest", "node"],
    "paths": {
      "astro:content": ["./node_modules/astro/dist/content/index.d.ts"],
      "astro/loaders": ["./node_modules/astro/dist/loaders/index.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}